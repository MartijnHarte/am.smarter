{
  "id": "am.smarter",
  "version": "1.0.0",
  "compatibility": ">=0.1.0",
  "name": {
    "en": "Smarter iKettle",
    "nl": "Smarter iKettle"
  },
  "category": "appliances",
  "description": {
    "en": "This app lets you control your iKettle.",
    "nl": "Met deze app kan je jou iKettle besturen."
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "author": {
    "name": "Robin Bolscher",
    "email": "robin@athom.nl"
  },
  "speech": [
  ],
  "drivers": [
    {
      "id": "ikettle",
      "name": {
        "en": "iKettle",
        "nl": "iKettle"
      },
      "images": {
        "large": "drivers/ikettle/assets/images/large.png",
        "small": "drivers/ikettle/assets/images/small.png"
      },
      "class": "kettle",
      "capabilities": [
        "name",
        "onoff",
        "temperature",
        "keep_warm",
        "boiled",
        "docked"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_kettle"
          }
        },
        {
          "id": "add_kettle",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
  }
}