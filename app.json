{
  "id": "am.smarter",
  "version": "1.0.0",
  "compatibility": ">=0.1.0",
  "name": {
    "en": "Smarter iKettle",
    "nl": "Smarter iKettle"
  },
  "category": "appliances",
  "description": {
    "en": "This app lets you control your iKettle.",
    "nl": "Met deze app kan je jou iKettle besturen."
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "author": {
    "name": "Robin Bolscher",
    "email": "robin@athom.nl"
  },
  "speech": [
  ],
  "drivers": [
    {
      "id": "ikettle",
      "name": {
        "en": "iKettle",
        "nl": "iKettle"
      },
      "images": {
        "large": "drivers/ikettle/assets/images/large.png",
        "small": "drivers/ikettle/assets/images/small.png"
      },
      "class": "kettle",
      "capabilities": [
        "onoff",
        "temperature",
        "keep_warm",
        "boiled",
        "removed"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_kettle"
          }
        },
        {
          "id": "add_kettle",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "boiled",
        "title": {
          "en": "Kettle has boiled",
          "nl": "Water heeft gekookt"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select iKettle",
              "nl": "Selecteer iKettle"
            }
          }
        ]
      },
      {
        "id": "removed",
        "title": {
          "en": "Kettle has been undocked",
          "nl": "Waterkoker van dock gehaald"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select iKettle",
              "nl": "Selecteer iKettle"
            }
          }
        ]
      },
      {
        "id": "keep_warm_expired",
        "title": {
          "en": "Keep warm time expired",
          "nl": "Houd warm tijd voorbij"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select iKettle",
              "nl": "Selecteer iKettle"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "keep_warm",
        "title": {
          "en": "Is keeping warm",
          "nl": "Is aan het warm houden"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select iKettle",
              "nl": "Selecteer iKettle"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "onoff",
        "title": {
          "en": "Turn on water boiler",
          "nl": "Zet waterkoker aan"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "style": {
              "width": "50%"
            },
            "placeholder": {
              "en": "Select iKettle",
              "nl": "Selecteer iKettle"
            }
          },
          {
            "name": "temperature",
            "type": "dropdown",
            "style": {
              "width": "25%"
            },
            "values": [
              {
                "id": "65",
                "label": {
                  "en": "65 °C",
                  "nl": "65 °C"
                }
              },
              {
                "id": "80",
                "label": {
                  "en": "80 °C",
                  "nl": "80 °C"
                }
              },
              {
                "id": "95",
                "label": {
                  "en": "95 °C",
                  "nl": "95 °C"
                }
              },
              {
                "id": "100",
                "label": {
                  "en": "100 °C",
                  "nl": "100 °C"
                }
              }
            ]
          },
          {
            "name": "keep_warm",
            "type": "dropdown",
            "style": {
              "width": "25%"
            },
            "values": [
              {
                "id": false,
                "label": {
                  "en": "Don't keep warm",
                  "nl": "Houd niet warm"
                }
              },
              {
                "id": true,
                "label": {
                  "en": "Keep warm afterwards",
                  "nl": "Houd warm achteraf"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}