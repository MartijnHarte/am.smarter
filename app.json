{
  "id": "am.smarter",
  "version": "1.0.1",
  "compatibility": ">=0.1.0",
  "name": {
    "en": "Smarter iKettle",
    "nl": "Smarter iKettle"
  },
  "category": "appliances",
  "description": {
    "en": "This app lets you control your iKettle.",
    "nl": "Met deze app kan je jou iKettle besturen."
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.com"
  },
  "speech": [
  ],
  "drivers": [
    {
      "id": "ikettle",
      "name": {
        "en": "iKettle",
        "nl": "iKettle"
      },
      "images": {
        "large": "drivers/ikettle/assets/images/large.png",
        "small": "drivers/ikettle/assets/images/small.png"
      },
      "class": "kettle",
      "capabilities": [
        "onoff",
        "temperature",
        "keep_warm",
        "boiled"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_kettle"
          }
        },
        {
          "id": "add_kettle",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "kettle_has_boiled",
        "title": {
          "en": "Kettle has boiled",
          "nl": "Water heeft gekookt"
        },
        "args": [
          {
            "name": "which_kettle",
            "type": "device",
            "placeholder": {
              "en": "Select iKettle",
              "nl": "Selecteer iKettle"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "keep_warm_time",
        "title": {
          "en": "Keep water warm for",
          "nl": "Houd water warm voor"
        },
        "args": [
          {
            "name": "which_kettle",
            "type": "device",
            "style": {"width": "60%"},
            "placeholder": {
              "en": "Select iKettle",
              "nl": "Selecteer iKettle"
            }
          },
          {
            "name": "keep_warm_time",
            "type": "dropdown",
            "style": {"width": "40%"},
            "values": [
              {
                "value": "5",
                "label": {
                  "en": "5 minutes",
                  "nl": "5 minuten"
                }
              },
              {
                "value": "10",
                "label": {
                  "en": "10 minutes",
                  "nl": "10 minuten"
                }
              },
              {
                "value": "20",
                "label": {
                  "en": "20 minutes",
                  "nl": "20 minuten"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}